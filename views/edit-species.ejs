<%- include('header') -%>

<div class="jumbotron my-auto d-flex align-items-center justify-content-center">
 <form class="mt-5" action="/species/<%=id%>/edit?_method=PUT" method="POST">
  <div class="form-row">
    <div class="form-group text-light">
    <label for="date">Species Name</label>
    <input type="text" class="form-control form-control-lg" id="date" name="date" value="<%=finalResults.name%>">
  </div>
  <div class="form-group text-light">
    <label for="habitat">Scientific Name</label>
    <input type="text" class="form-control form-control-lg" id="habitat" name="habitat" value="<%=finalResults.scientific_name%>">
  </div>
   <div class="mt-5 d-flex justify-content-center">
      <form
        action="/species/<%=id%>/edit?_method=PUT"
        method="POST"
      >
        <input
          type="submit"
          value="Edit"
          class="button mx-5"
          id="edit"
          onclick="return confirm('Are you sure you want to edit this species note?');"
        />
      </form>
      <form
        action="/species/<%=id%>/delete?_method=DELETE"
        method="POST"
      >
        <input
          type="submit"
          value="Delete"
          class="button mx-5"
          onclick="return confirm('Are you sure you want to edit this species note?');"
        />
      </form>
    </div>
  </div>
  </div>
</form>
  </div>


<%- include('footer') -%>
