<%- include('header') -%>

<div class="jumbotron my-auto d-flex align-items-center justify-content-center">
 <form class="mt-5" action="/note/<%=id%>/edit?_method=PUT" method="POST">
  <div class="form-row">
    <div class="form-group text-light">
    <label for="date">Date & Time</label>
    <input type="text" class="form-control form-control-lg" id="date" name="date" value="<%=finalResults.date%>">
  </div>
  <div class="form-group text-light">
    <label for="habitat">Habitat</label>
    <input type="text" class="form-control form-control-lg" id="habitat" name="habitat" value="<%=finalResults.habitat%>">
  </div>
  <div class="form-group text-light">
    <label for="appearance">Appearance</label>
    <input type="text" class="form-control form-control-lg" id="appearance" name="appearance" value="<%=finalResults.appearance%>">
  </div>
    <div class="form-group text-light">
    <label for="behaviour">Behaviour</label>
    <input type="text" class="form-control form-control-lg" id="behaviour" name="behaviour" value="<%=finalResults.behaviour%>">
  </div>
    <div class="form-group text-light">
    <label for="vocalisations">Vocalisations</label>
    <input type="text" class="form-control form-control-lg" id="vocalisations" name="vocalisations" value="<%=finalResults.vocalisations%>">
  </div>
    <div class="form-group text-light">
      <label for="flocksize">Flock Size</label>
      <input type="text" class="form-control form-control-lg" id="flocksize" name="flock_size" value="<%=finalResults.flock_size%>">
    </div>
   <div class="mt-5 d-flex justify-content-center">
      <form
        action="/note/<%=id%>/edit?_method=PUT"
        method="POST"
      >
        <input
          type="submit"
          value="Edit"
          class="button mx-5"
          id="edit"
          onclick="return confirm('Are you sure you want to edit this bird note?');"
        />
      </form>
      <form
        action="/note/<%=id%>/delete?_method=DELETE"
        method="POST"
      >
        <input
          type="submit"
          value="Delete"
          class="button mx-5"
          onclick="return confirm('Are you sure you want to edit this bird note?');"
        />
      </form>
    </div>
  </div>
  </div>
</form>
  </div>


<%- include('footer') -%>
