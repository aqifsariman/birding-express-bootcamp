<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles.css">
  <title>BIRD HUNTING</title>
</head>

<div class="jumbotron my-auto d-flex flex-column align-items-center justify-content-center" style="height:100vh; width:100vw">
<form action="/signup" method="POST" oninput='confirmpassword.setCustomValidity(confirmpassword.value != password.value ? "Passwords do not match" : "")'>
  <div class="form-group text-light">
    <label for="username">Username</label>
    <input name="username" type="text" class="form-control" id="username" placeholder="Username" required>
  </div>
  <div class="form-group text-light mt-3">
    <label for="password">Password</label>
    <input name="password" type="password" class="form-control" id="password" placeholder="Password" required>
  </div>
  <div class="form-group text-light mt-3">
    <label for="confirmpassword">Confirm Password</label>
    <input name="confirmpassword" type="password" class="form-control" id="confirmpassword" placeholder="Confirm Password" required>
  </div>
 
  <button type="submit" class="btn btn-dark mt-5">Submit</button>
</form>
<small class="text-light">Already have an account? Login <a class="text-light" href="/login">here!</a></small>

  </div>
  
<%- include('footer') -%>

