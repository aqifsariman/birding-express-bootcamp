<%- include('header') -%>
<div class="jumbotron my-auto d-flex flex-column flex-sm-wrap align-items-center justify-content-center" style="height:100vh; width:100vw">
    <table class="table table-striped table-light mt-5 table-hover col-sm-4" style="width:50vw">
      <thead>
        <div>
          <th scope="col" colspan="12" class="text-center text-light bg-transparent"><h1>Sighting <%=id%> Comments</h1></th>
        </div>
        <tr class="text-dark text-center">
          <th scope="col">Comments</th>
          <th scope="col">Submitted By</th>
        </tr>
      </thead>
      <tbody>
         <tr class="d-flex flex-sm-wrap"></tr>
          <% function capitalizeFirstLetter(str) { %>
            <% const capitalized = str.charAt(0).toUpperCase() + str.slice(1);%>
                <%return capitalized;%>
          <%}%>
        <% finalResults.forEach((comments)=>{ %>
          <td class="col text-dark text-center" ><a href="/note/<%=comments.id%>/comments/edit"><%=comments.notes_comments %></a></td>
          <td class="col text-dark text-center" ><%=capitalizeFirstLetter(comments.username) %></a></td>
        </tr>
       <% }) %>
      </tbody>
    </table>

  </div>
  


<%- include('footer') -%>
