<%- include('header') -%>
<div class="jumbotron table-responsive d-flex flex-column align-items-xl-center justify-content-xl-center ">
  
    <table class="table table-striped table-light mt-5 table-hover w-auto">
      <thead>
        <div>
          <th scope="col" colspan="12" class="text-center text-light bg-transparent"><h1>Your Sightings List</h1></th>
        </div>
        <tr class="text-dark">
          <th scope="col">Date</th>
          <th scope="col">Habitat</th>
          <th scope="col">Appearance</th>
          <th scope="col">Behaviour</th>
          <th scope="col">Vocalisations</th>
          <th scope="col">Flock Size</th>
        </tr>
      </thead>
      <tbody>
         <tr class="d-flex "></tr>
        <% for (let i =0; i< finalResults.length;i++) {%>
          <td class="col text-dark" ><a href="/note/<%=finalResults[i].id%>"><%=finalResults[i].date %></a></td>
          <td class="col text-dark" ><a href="/note/<%=finalResults[i].id%>"><%=finalResults[i].habitat %></a></td>
          <td class="col text-dark" ><a href="/note/<%=finalResults[i].id%>"><%=finalResults[i].appearance %></a></td>
          <td class="col text-dark" ><a href="/note/<%=finalResults[i].id%>"><%=finalResults[i].behaviour %></a></td>
          <td class="col text-dark" ><a href="/note/<%=finalResults[i].id%>"><%=finalResults[i].vocalisations %></a></td>
          <td class="col text-dark" ><a href="/note/<%=finalResults[i].id%>"><%=finalResults[i].flock_size %></a></td>

          </tr>
        <% } %>
      </tbody>
    </table>
  
     <div class="dropdown d-flex justify-content-center">
  <button class="btn btn-light dropdown-toggle my-auto" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Sort By
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <a class="dropdown-item" href="/user/<%=username%>?sort=date">Date</a>
    <a class="dropdown-item" href="/user/<%=username%>?sort=habitat">Habitat</a>
    <a class="dropdown-item" href="/user/<%=username%>?sort=behaviour">Behaviour</a>
    <a class="dropdown-item" href="/user/<%=username%>?sort=flock_size">Flock Size</a>
    <a class="dropdown-item" href="/user/<%=username%>?sort=user_submitted">User Submitted</a>
  </div>
</div>
<div class="d-flex flex-column align-items-xl-center justify-content-xl-center ">
    <table class="table table-striped table-light mt-5 table-hover w-auto">
      <thead>
        <div>
          <th scope="col" colspan="12" class="text-center text-light bg-transparent"><h1>Your Comments List</h1></th>
        </div>
        <tr class="text-dark">
          <th scope="col">Notes ID</th>
          <th scope="col">Appearance</th>
          <th scope="col">Comments</th>
        </tr>
      </thead>
      <tbody>
         <tr class="d-flex"></tr>
        <% for (let i =0; i< comments.length;i++) {%>
          <td class="col text-dark" ><a href="/note/<%=comments[i].id%>/comments/edit"><%=comments[i].notes_id %></a></td>
          <td class="col text-dark" ><a href="/note/<%=comments[i].id%>/comments/edit"><%=comments[i].appearance %></a></td>
          <td class="col text-dark" ><a href="/note/<%=comments[i].id%>/comments/edit"><%=comments[i].notes_comments %></a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
    </div>
  </div>
<%- include('footer') -%>
